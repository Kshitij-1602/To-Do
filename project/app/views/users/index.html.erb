<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to '<button type="button"> Show this User</button>'.html_safe, user %>
      <br/>
      <%= button_to "See This user tasks", user_tasks_path(user.id), method: :get %>
      
       
    </p>
  <% end %>
</div>
<br/>
<%= link_to '<button type="button"> Add New User </button>'.html_safe, new_user_path %>
